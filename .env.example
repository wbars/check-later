# Bot Configuration
BOT_API_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username_here
WEBHOOK_URL=https://your-domain.com/webhook.php

# Database Configuration
# SQLite (recommended)
DB_DRIVER=sqlite
DB_SQLITE_PATH=/full/path/to/database/check_later_bot.sqlite
# Note: Use an absolute path to avoid issues with relative paths
# Example: DB_SQLITE_PATH=/var/www/check_later_my_bot/database/check_later_bot.sqlite

# MySQL Configuration (legacy, not recommended)
# DB_DRIVER=mysql
# DB_HOST=localhost
# DB_NAME=check_later_bot
# DB_USER=your_database_user
# DB_PASS=your_database_password

# Logging Configuration
LOG_PATH=/full/path/to/logs/check_later_bot.log
# Example: LOG_PATH=/var/www/check_later_my_bot/logs/check_later_bot.log
LOG_LEVEL=warning  # Options: debug, info, notice, warning, error, critical, alert, emergency