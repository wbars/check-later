{
    "name": "user/check_later_my_bot",
    "description": "Telegram bot for managing 'check later' links and content",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.5",
        "longman/telegram-bot": "^0.80",
        "monolog/monolog": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "CheckLaterBot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CheckLaterBot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 src/",
        "phpcbf": "phpcbf --standard=PSR12 src/",
        "phpstan": "phpstan analyse src/ --level=7",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ],
        "audit": "composer audit"
    },
    "authors": [
        {
            "name": "Bot Developer"
        }
    ],
    "minimum-stability": "stable"
}
